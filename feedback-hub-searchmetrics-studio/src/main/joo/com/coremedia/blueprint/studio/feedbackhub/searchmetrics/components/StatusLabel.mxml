<?xml version="1.0"?>
<Container xmlns:fx="http://ns.adobe.com/mxml/2009"
           xmlns:exml="http://www.jangaroo.net/exml/0.8"
           xmlns:ui="exml:com.coremedia.ui.config"
           xmlns="exml:ext.config"
           height="40">
  <fx:Script><![CDATA[
    import com.coremedia.ui.data.ValueExpressionFactory;

    public static const xtype:String = "com.coremedia.blueprint.studio.feedbackhub.searchmetrics.config.statusLabel";

    private var config:StatusLabel;

    [Bindable]
    public var text:String;

    [Bindable]
    public var error:Boolean = false;

    public native function StatusLabel(config:StatusLabel = null);
    ]]></fx:Script>
  <items>
    <ui:IconDisplayField iconCls="{resourceManager.getString('com.coremedia.icons.CoreIcons', 'approve')}">
      <ui:plugins>
        <ui:BindPropertyPlugin componentProperty="hidden"
                               bindTo="{ValueExpressionFactory.createFromValue(config.error)}"/>
      </ui:plugins>
    </ui:IconDisplayField>
    <ui:IconDisplayField iconCls="{resourceManager.getString('com.coremedia.icons.CoreIcons', 'exclamation_mark')}">
      <ui:plugins>
        <ui:BindPropertyPlugin componentProperty="hidden"
                               bindTo="{ValueExpressionFactory.createFromValue(!config.error)}"/>
      </ui:plugins>
    </ui:IconDisplayField>
    <Container width="6"/>
    <DisplayField value="{config.text}"/>
  </items>
  <layout>
    <layout_HBox align="stretch"/>
  </layout>
</Container>
